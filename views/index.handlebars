<h1>Welcome to the Burger App</h1>
<ul>
    <h2>All Uneaten Burgers:</h2>
{{#each burgers}}
    {{#unless devoured}}
    <h3>{{ burger_name}} </h3><button type="devour">Devour</button>
    {{/unless}}
{{/each}}
</ul>
<ul>
    <h2>All Eaten Burgers:</h2>
{{#each burgers}}
    {{#if devoured}}
    <h3> {{burger_name}} </h3><button type="undevour">Undevour</button>
    {{/if}}
{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>